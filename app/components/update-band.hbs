<div
  class="modal-dialog fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 translate-x-1 translate-y-1"
>
  <div class="modal-content bg-white rounded-lg p-6 shadow-lg w-1/3">
    <h2 class="text-2xl font-bold mb-4 text-purple-700">Update Band</h2>
    <form {{on "submit" this.submitForm}}>
      <div class="mb-5">
        <label
          for="band-name"
          class="block text-sm font-medium text-gray-700"
        >Band Name</label>
        <div class="mt-1">
          <input
            type="text"
            id="band-name"
            name="band-name"
            class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md"
            value={{this.name}}
            {{on "input" this.handleNameChange}}
          />
        </div>
      </div>

      <div class="mb-5">
        <label
          for="band-description"
          class="block text-sm font-medium text-gray-700"
        >Band Description</label>
        <div class="mt-1">
          <textarea
            id="band-description"
            name="band-description"
            class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md"
            value={{this.description}}
            {{on "input" this.handleDescriptionChange}}
          />
        </div>
      </div>

      <div class="flex justify-end">
        <button
          type="submit"
          class="rounded bg-blue-500 text-white py-2 px-4 hover:bg-blue-700"
        >Save</button>
        <button
          type="button"
          class="ml-2 rounded bg-red-500 text-white py-2 px-4 hover:bg-red-700"
          {{on "click" this.closeModal}}
        >Cancel</button>
      </div>
    </form>
  </div>
</div>